        @keyframes glow {
            0%, 100% { box-shadow: 0 5px 15px rgba(255, 107, 157, 0.4); }
            50% { box-shadow: 0 5px 30px rgba(255, 107, 157, 0.8), 0 0 20px rgba(255, 255, 255, 0.5); }
        }

        .btn-yes:hover {
            transform: scale(1.15) translateZ(20px);
            box-shadow: 0 8px 25px rgba(255, 107, 157, 0.6);
        }

        .btn-no {
            background: rgba(255, 255, 255, 0.4);
