    <!-- –ü–∞–¥–∞—é—â–∏–µ —Å–µ—Ä–¥–µ—á–∫–∏ –Ω–∞ —Ñ–æ–Ω–µ -->
    <div class="hearts-container" id="heartsContainer"></div>

    <!-- –ì–ª–∞–≤–Ω–∞—è –∫–∞—Ä—Ç–æ—á–∫–∞ -->
    <div class="card-container">
        <div class="card" data-tilt data-tilt-max="15" data-tilt-speed="400" data-tilt-glare data-tilt-max-glare="0.2">
            <div class="card-content">
                <h1>–° –î–Ω—ë–º –°–≤—è—Ç–æ–≥–æ –í–∞–ª–µ–Ω—Ç–∏–Ω–∞!</h1>
                <p class="question">–¢—ã –±—É–¥–µ—à—å –º–æ–µ–π –≤–∞–ª–µ–Ω—Ç–∏–Ω–∫–æ–π? üíù</p>
                <div class="buttons">
                    <button class="btn btn-yes" onclick="sayYes()">–î–∞! üíï</button>
                    <button class="btn btn-no" id="noBtn" onmouseenter="moveButton()" onclick="moveButton()">–ù–µ—Ç</button>
                </div>
            </div>
        </div>
    </div>

    <!-- –≠–∫—Ä–∞–Ω —É—Å–ø–µ—Ö–∞ -->
    <div class="success-screen" id="successScreen">
        <div class="success-content">
            <div class="big-heart">üíñ</div>
            <h2 class="success-text">–£—Ä–∞! –Ø —Ç–∞–∫ –∏ –∑–Ω–∞–ª(–∞)! ‚ù§Ô∏è</h2>
            <p style="color: white; font-size: 1.2rem; margin-top: 20px; text-shadow: 0 2px 10px rgba(0,0,0,0.2);">
                –¢—ã —Å–¥–µ–ª–∞–ª(–∞) –º–æ–π –¥–µ–Ω—å –æ—Å–æ–±–µ–Ω–Ω—ã–º! üåü
            </p>
        </div>
    </div>

    <script>
        // === –°–ò–°–¢–ï–ú–ê –ü–ê–î–ê–Æ–©–ò–• –°–ï–†–î–ï–ß–ï–ö ===
        const heartsContainer = document.getElementById('heartsContainer');
        const heartSymbols = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù', 'ü§ç'];
        
        function createFallingHeart() {
            const heart = document.createElement('div');
            heart.className = 'falling-heart';
            heart.innerHTML = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
            
            // –°–ª—É—á–∞–π–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è –ø–æ X
            heart.style.left = Math.random() * 100 + '%';
            
            // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä
            const size = Math.random() * 20 + 15;
            heart.style.fontSize = size + 'px';
            
            // –°–ª—É—á–∞–π–Ω–∞—è –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç—å
            heart.style.opacity = Math.random() * 0.5 + 0.3;
            
            // –°–ª—É—á–∞–π–Ω–∞—è —Å–∫–æ—Ä–æ—Å—Ç—å –∞–Ω–∏–º–∞—Ü–∏–∏
            const duration = Math.random() * 5 + 5; // 5-10 —Å–µ–∫—É–Ω–¥
            heart.style.animationDuration = duration + 's';
            
            // –°–ª—É—á–∞–π–Ω–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞
            heart.style.animationDelay = Math.random() * 5 + 's';
            
            heartsContainer.appendChild(heart);
            
            // –£–¥–∞–ª–µ–Ω–∏–µ –ø–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
            setTimeout(() => {
                heart.remove();
            }, (duration + 5) * 1000);
        }

        // –°–æ–∑–¥–∞—ë–º –Ω–∞—á–∞–ª—å–Ω—ã–µ —Å–µ—Ä–¥–µ—á–∫–∏
        for (let i = 0; i < 20; i++) {
            setTimeout(createFallingHeart, i * 300);
        }

        // –ü–æ—Å—Ç–æ—è–Ω–Ω–æ–µ —Å–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤—ã—Ö —Å–µ—Ä–¥–µ—á–µ–∫
        setInterval(createFallingHeart, 800);

        // === –•–ò–¢–†–ê–Ø –ö–ù–û–ü–ö–ê "–ù–ï–¢" ===
        const noBtn = document.getElementById('noBtn');
        let mouseX = 0;
        let mouseY = 0;
        let btnX = 0;
        let btnY = 0;
        let isEscaping = false;

        // –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º –ø–æ–∑–∏—Ü–∏—é –º—ã—à–∏
        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –¥–æ –∫–Ω–æ–ø–∫–∏
            const rect = noBtn.getBoundingClientRect();
            const btnCenterX = rect.left + rect.width / 2;
            const btnCenterY = rect.top + rect.height / 2;
            
            const distance = Math.sqrt(
                Math.pow(mouseX - btnCenterX, 2) + 
                Math.pow(mouseY - btnCenterY, 2)
            );
            
            // –ï—Å–ª–∏ –º—ã—à—å –±–ª–∏–∑–∫–æ (150px), –∫–Ω–æ–ø–∫–∞ –Ω–∞—á–∏–Ω–∞–µ—Ç —É–±–µ–≥–∞—Ç—å
            if (distance < 150 && !isEscaping) {
                escapeButton();
            }
        });

        function escapeButton() {
            isEscaping = true;
            
            const card = document.querySelector('.card');
            const cardRect = card.getBoundingClientRect();
            
            // –í—ã—á–∏—Å–ª—è–µ–º –Ω–æ–≤—É—é –ø–æ–∑–∏—Ü–∏—é –≤–Ω—É—Ç—Ä–∏ –∫–∞—Ä—Ç–æ—á–∫–∏
            const maxX = cardRect.width - 100;
            const maxY = cardRect.height - 50;
            
            // –°–ª—É—á–∞–π–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è —Å —É—á—ë—Ç–æ–º —Ä–∞—Å—Å—Ç–æ—è–Ω–∏—è –æ—Ç –∫—É—Ä—Å–æ—Ä–∞
            let newX = Math.random() * maxX - maxX/2;
            let newY = Math.random() * maxY - maxY/2;
            
            // –ü—Ä–∏–º–µ–Ω—è–µ–º —Å –ø–ª–∞–≤–Ω–æ–π –∞–Ω–∏–º–∞—Ü–∏–µ–π
            noBtn.style.transform = `translate(${newX}px, ${newY}px)`;
            noBtn.style.transition = 'transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
            
            setTimeout(() => {
                isEscaping = false;
            }, 400);
        }

        function moveButton() {
            escapeButton();
        }

        // === –û–ë–†–ê–ë–û–¢–ö–ê –ù–ê–ñ–ê–¢–ò–Ø "–î–ê" ===
        function sayYes() {
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∫–æ–Ω—Ñ–µ—Ç—Ç–∏
            const duration = 3000;
            const end = Date.now() + duration;

            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –∫–æ–Ω—Ñ–µ—Ç—Ç–∏ —Å —Ä–∞–∑–Ω—ã—Ö —Å—Ç–æ—Ä–æ–Ω
            const frame = () => {
                confetti({
                    particleCount: 5,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0 },
                    colors: ['#FFC8DD', '#CDB4DB', '#FF6B9D', '#FFFFFF']
                });
                confetti({
                    particleCount: 5,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1 },
                    colors: ['#FFC8DD', '#CDB4DB', '#FF6B9D', '#FFFFFF']
                });

                if (Date.now() < end) {
                    requestAnimationFrame(frame);
                }
            };
            
            frame();

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —ç–∫—Ä–∞–Ω —É—Å–ø–µ—Ö–∞ —Å –∑–∞–¥–µ—Ä–∂–∫–æ–π
            setTimeout(() => {
                document.getElementById('successScreen').classList.add('active');
                
                // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π –≤–∑—Ä—ã–≤ –∫–æ–Ω—Ñ–µ—Ç—Ç–∏ –ø–æ —Ü–µ–Ω—Ç—Ä—É
                confetti({
                    particleCount: 150,
                    spread: 100,
                    origin: { y: 0.6 },
                    colors: ['#FFC8DD', '#CDB4DB', '#FF6B9D', '#FFFFFF', '#FFD700'],
                    shapes: ['circle', 'square'],
                    scalar: 1.2
                });
            }, 500);
        }

        // === –°–ï–ö–†–ï–¢–ù–ê–Ø –§–ò–ß–ê: –ö–õ–ò–ö –ü–û –≠–ö–†–ê–ù–£ ===
        document.addEventListener('click', (e) => {
            // –ù–µ —Å–æ–∑–¥–∞—ë–º —Å–µ—Ä–¥–µ—á–∫–æ –µ—Å–ª–∏ –∫–ª–∏–∫ –ø–æ –∫–Ω–æ–ø–∫–µ
            if (e.target.classList.contains('btn')) return;
            
            const heart = document.createElement('div');
            heart.className = 'click-heart';
            heart.innerHTML = 'üíï';
            heart.style.left = e.clientX + 'px';
            heart.style.top = e.clientY + 'px';
            
            // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä
            const size = Math.random() * 15 + 20;
            heart.style.fontSize = size + 'px';
            
            document.body.appendChild(heart);
            
            // –£–¥–∞–ª—è–µ–º –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
            setTimeout(() => {
                heart.remove();
            }, 1500);
        });

        // === –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø TILT –≠–§–§–ï–ö–¢–ê ===
        // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —É–∂–µ –∑–∞–¥–∞–Ω—ã —á–µ—Ä–µ–∑ data-–∞—Ç—Ä–∏–±—É—Ç—ã –≤ HTML
        // VanillaTilt –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ—Ç —ç–ª–µ–º–µ–Ω—Ç—ã —Å data-tilt
        
        // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤
        if (window.matchMedia("(max-width: 768px)").matches) {
            // –ù–∞ –º–æ–±–∏–ª—å–Ω—ã—Ö —É–º–µ–Ω—å—à–∞–µ–º —ç—Ñ—Ñ–µ–∫—Ç –Ω–∞–∫–ª–æ–Ω–∞
            document.querySelector('.card').setAttribute('data-tilt-max', '5');
        }
    </script>
</body>
