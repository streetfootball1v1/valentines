<body>

    <div class="container" id="mainCard">
        <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHpueGZ3bmZ4eGZ3bmZ4eGZ3bmZ4eGZ3bmZ4eGZ3bmZ4ZnduZiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/cLS1cfxvGOPVpf9g3y/giphy.gif" alt="Cute Cat">
        <h1>Будешь моей половинкой? ❤️</h1>
        <div class="buttons">
            <button id="yesBtn">ДА!</button>
            <button id="noBtn">Нет</button>
        </div>
    </div>

    <div class="container hidden" id="successMsg">
        <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHpueGZ3bmZ4eGZ3bmZ4eGZ3bmZ4eGZ3bmZ4eGZ3bmZ4ZnduZiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/KztT2c4u8mYYUiMKdJ/giphy.gif" alt="Happy Cat">
        <h1 class="fade-in">Ура! Я так и знал(а)! ✨</h1>
        <p class="fade-in">Это будет лучший день!</p>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const mainCard = document.getElementById('mainCard');
        const successMsg = document.getElementById('successMsg');

        // Логика для убегающей кнопки
        noBtn.addEventListener('mouseover', () => {
            const containerRect = mainCard.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();

            let newX, newY;

            // Генерируем случайные координаты внутри контейнера mainCard
            // С учетом размеров кнопки, чтобы она не выходила за границы
            newX = Math.random() * (containerRect.width - btnRect.width);
            newY = Math.random() * (containerRect.height - btnRect.height);

            // Обновляем позицию кнопки относительно родительского элемента (mainCard)
            // Изначально noBtn позиционирована абсолютно внутри .buttons,
            // но для динамического перемещения лучше менять top/left относительно .buttons
            // или использовать transform для плавности и производительности.
            // Для простоты сейчас меняем left/top
            noBtn.style.left = `${newX}px`;
            noBtn.style.top = `${newY}px`;
        });

        // Клик по "Да"
        yesBtn.addEventListener('click', () => {
            mainCard.classList.add('hidden');
            successMsg.classList.remove('hidden');
            document.querySelectorAll('#successMsg .fade-in').forEach(el => el.style.animationPlayState = 'running');
            startHeartfall();
        });

        // Функция для запуска падающих сердечек
        function startHeartfall() {
            setInterval(() => {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.style.left = Math.random() * 100 + 'vw'; // Случайная позиция по горизонтали
                heart.style.animationDuration = Math.random() * 2 + 3 + 's'; // Случайная длительность падения
                heart.style.animationDelay = Math.random() * 0.5 + 's'; // Случайная задержка
                document.body.appendChild(heart);

                // Удаляем сердечко после того, как оно упадет, чтобы не засорять DOM
                heart.addEventListener('animationend', () => {
                    heart.remove();
                });
            }, 200); // Создаем новое сердечко каждые 200мс
        }
        
    </script>
</body>
</html>
